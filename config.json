{
  "// =====================================================================": "",
  "// CONFIGURAÇÃO GLOBAL — CHATGPT DOCKER PUPPETEER": "",
  "// Arquivo de controle operacional e cognitivo do sistema": "",
  "//": "",
  "// Cenário canônico de execução:": "",
  "// • Host: Windows": "",
  "// • Container: Linux (DevContainer)": "",
  "// • Execução do app: Linux (Node.js)": "",
  "// • Browser real: Chrome externo no Windows": "",
  "// • Controle: Puppeteer via Remote DevTools": "",
  "// =====================================================================": "",

  "// ---------------------------------------------------------------------": "",
  "// [A] MODO DE OPERAÇÃO DO BROWSER": "",
  "// ---------------------------------------------------------------------": "",
  "// launcher  → Puppeteer inicia o browser (NÃO usado aqui)": "",
  "// remote    → Puppeteer conecta a um browser já em execução (CANÔNICO)": "",
  "BROWSER_MODE": "remote",

  "// Endpoint DevTools do Chrome externo (Windows)": "",
  "// Dentro do container, localhost ≠ host": "",
  "DEBUG_PORT": "http://host.docker.internal:9222",

  "// Permite fallback automático se o browser remoto cair": "",
  "ALLOW_BROWSER_RECONNECT": true,
  "BROWSER_RECONNECT_INTERVAL_MS": 3000,
  "BROWSER_MAX_RECONNECT_ATTEMPTS": 20,

  "// ---------------------------------------------------------------------": "",
  "// [B] MODELO / LLM / CONTEXTO DE UI": "",
  "// ---------------------------------------------------------------------": "",
  "// Modelo preferencial (dependente da UI, rollout e conta)": "",
  "// O código deve tolerar divergência entre UI e ID nominal": "",
  "DEFAULT_MODEL_ID": "gpt-5",

  "// Permite downgrade automático se o modelo não estiver disponível": "",
  "ALLOW_MODEL_FALLBACK": true,
  "MODEL_FALLBACK_PRIORITY": [
    "gpt-5",
    "gpt-4.1",
    "gpt-4o"
  ],

  "// ---------------------------------------------------------------------": "",
  "// [C] CONCORRÊNCIA E PARALELISMO": "",
  "// ---------------------------------------------------------------------": "",
  "// Limite global de tarefas simultâneas": "",
  "MAX_CONCURRENT_TASKS": 1,

  "// Limite de passos paralelos dentro de uma mesma tarefa": "",
  "MAX_PARALLEL_STEPS": 1,

  "// Bloqueia paralelismo quando confiança do ambiente é baixa": "",
  "SERIALIZE_ON_LOW_CONFIDENCE": true,

  "// ---------------------------------------------------------------------": "",
  "// [D] TIMEOUTS OPERACIONAIS (ms)": "",
  "// ---------------------------------------------------------------------": "",
  "PROGRESS_TIMEOUT_MS": 60000,
  "TASK_TIMEOUT_MS": 180000,
  "STEP_TIMEOUT_MS": 60000,

  "// Janela para recuperação de estado RUNNING após stall": "",
  "RUNNING_RECOVERY_MS": 45000,

  "// Timeout máximo de espera por resposta visível da UI": "",
  "UI_RESPONSE_TIMEOUT_MS": 30000,

  "// ---------------------------------------------------------------------": "",
  "// [E] HEARTBEAT, WATCHDOG E DETECÇÃO DE FALHAS": "",
  "// ---------------------------------------------------------------------": "",
  "HEARTBEAT_INTERVAL_MS": 5000,
  "HEARTBEAT_TIMEOUT_MS": 20000,

  "// Janela de tolerância antes de o watchdog intervir": "",
  "WATCHDOG_GRACE_PERIOD_MS": 30000,

  "// Permite reinício automático do fluxo após falha crítica": "",
  "ALLOW_AUTORESTART_ON_WATCHDOG": true,

  "// ---------------------------------------------------------------------": "",
  "// [F] SERVIDOR INTERNO / CONTROLE DE CICLO DE VIDA": "",
  "// ---------------------------------------------------------------------": "",
  "SERVER_STARTUP_TIMEOUT_MS": 30000,
  "SERVER_SHUTDOWN_TIMEOUT_MS": 15000,

  "// Porta lógica do servidor interno (se aplicável)": "",
  "SERVER_PORT": 3008,

  "// ---------------------------------------------------------------------": "",
  "// [G] POLÍTICAS DE SEGURANÇA E DOMÍNIOS": "",
  "// ---------------------------------------------------------------------": "",
  "// Lista branca explícita de domínios permitidos": "",
  "allowedDomains": [
    "chatgpt.com",
    "openai.com",
    "claude.ai",
    "gemini.google.com"
  ],

  "// Bloqueia qualquer navegação fora da lista acima": "",
  "ENFORCE_DOMAIN_WHITELIST": true,

  "// ---------------------------------------------------------------------": "",
  "// [H] CONFIANÇA DO AMBIENTE / HEURÍSTICAS": "",
  "// ---------------------------------------------------------------------": "",
  "// Grau mínimo de confiança para habilitar recursos avançados": "",
  "// 0 = nunca confia | 1 = permissivo | 2 = estrito": "",
  "MIN_ENV_CONFIDENCE": 1,

  "// Ajuste dinâmico de comportamento baseado em confiança": "",
  "ADAPT_BEHAVIOR_BY_CONFIDENCE": true,

  "// ---------------------------------------------------------------------": "",
  "// [I] LOGGING, DIAGNÓSTICO E VERBOSIDADE": "",
  "// ---------------------------------------------------------------------": "",
  "LOG_LEVEL": "info",

  "// Emite eventos estruturados para debugging profundo": "",
  "ENABLE_STRUCTURED_LOGS": true,

  "// Mantém histórico estendido de decisões automáticas": "",
  "PERSIST_DECISION_TRACE": true,

  "// ---------------------------------------------------------------------": "",
  "// [J] FLAGS EXPERIMENTAIS / RESERVA ESTRUTURAL": "",
  "// ---------------------------------------------------------------------": "",
  "// Flags mantidas mesmo quando inativas — reserva arquitetural": "",
  "EXPERIMENTAL_UI_PROBING": false,
  "EXPERIMENTAL_MULTI_TAB": false,
  "EXPERIMENTAL_SELF_HEALING": false
}
