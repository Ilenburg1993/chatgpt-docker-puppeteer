# EditorConfig - Consistency across editors
# https://editorconfig.org

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# JSON, YAML, TOML - 2 spaces
[*.{json,jsonc,yml,yaml,toml}]
indent_size = 2

# Markdown - preserve trailing whitespace (for line breaks)
[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_size = 2

# Makefile - requires tabs
[Makefile]
indent_style = tab

# Docker files
[Dockerfile*]
indent_size = 2

# Config files
[{package.json,tsconfig.json,jsconfig.json}]
indent_size = 2

[{.eslintrc,.prettierrc,.babelrc}]
indent_size = 2

# Ecosystem config
[ecosystem.config.js]
indent_size = 4
