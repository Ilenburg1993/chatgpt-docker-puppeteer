{
  "$schema": "https://json.schemastore.org/c8rc.json",

  "all": true,

  "include": [
    "index.js",
    "src/**/*.js"
  ],

  "exclude": [
    "node_modules/**",
    "coverage/**",
    ".c8/**",

    "tests/**",
    "**/*.test.js",
    "**/*.spec.js",

    "scripts/**",
    "tools/**",
    "analysis/**",
    "backups/**",
    "profile/**",
    "public/**",
    "local-login/**",

    "*.config.js",
    "*.config.mjs"
  ],

  "reporter": [
    "text",
    "html",
    "lcov",
    "json-summary"
  ],

  "report-dir": "coverage",
  "temp-directory": ".c8",

  "clean": true,

  "check-coverage": true,
  "per-file": false,
  "skip-full": false,

  "lines": 80,
  "functions": 75,
  "branches": 75,
  "statements": 80,

  "watermarks": {
    "lines": [70, 80],
    "functions": [65, 75],
    "branches": [65, 75],
    "statements": [70, 80]
  }
}
