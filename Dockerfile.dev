# =============================================================================
# Development Dockerfile for chatgpt-docker-puppeteer
# Includes dev dependencies and hot reload
# =============================================================================

FROM node:20

# Install Chromium and required libraries
RUN apt-get update && apt-get install -y \
    chromium \
    chromium-driver \
    fonts-liberation \
    fonts-noto-color-emoji \
    libnss3 \
    libxss1 \
    libgbm1 \
    libasound2 \
    libatk-bridge2.0-0 \
    libgtk-3-0 \
    curl \
    ca-certificates \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /app

# Configure Puppeteer
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    PUPPETEER_EXECUTABLE_PATH=/usr/bin/chromium \
    NODE_ENV=development

# Install dependencies (including dev)
COPY package*.json ./
RUN npm install

# Copy application files
COPY . .

# Create directories
RUN mkdir -p fila respostas logs profile

# Volumes for hot reload and data persistence
VOLUME ["/app/fila", "/app/respostas", "/app/logs", "/app/profile", "/app/node_modules"]

EXPOSE 3008

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
