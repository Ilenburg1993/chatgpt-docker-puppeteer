# =============================================================================
# Development Dockerfile for chatgpt-docker-puppeteer
# Uses remote Chrome via debugging protocol + hot reload
# =============================================================================

FROM node:20

# Install only essential tools (uses remote Chrome)
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

WORKDIR /app

# Configure to use remote Chrome
ENV PUPPETEER_SKIP_CHROMIUM_DOWNLOAD=true \
    NODE_ENV=development \
    CHROME_REMOTE_DEBUGGING_PORT=9222

# Install dependencies (including dev)
COPY package*.json ./
RUN npm install

# Copy application files
COPY . .

# Create directories
RUN mkdir -p fila respostas logs profile

# Volumes for hot reload and data persistence
VOLUME ["/app/fila", "/app/respostas", "/app/logs", "/app/profile", "/app/node_modules"]

EXPOSE 3008
EXPOSE 9229

# Start with nodemon for hot reload
CMD ["npm", "run", "dev"]
