{
    "compilerOptions": {
        /* Plataforma e módulos - Node.js 20+ CommonJS */
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2022"],

        /* Verificações JavaScript (leve para JS puro) */
        "checkJs": false,
        "allowJs": true,
        "maxNodeModuleJsDepth": 1,

        /* Modo estrito desabilitado (projeto JS sem tipos) */
        "strict": false,
        "noImplicitAny": false,
        "noImplicitThis": false,

        /* Interoperabilidade Node.js */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        /* IntelliSense otimizado */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@core/*": [
                "src/core/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@nerv/*": [
                "src/nerv/*"
            ],
            "@kernel/*": [
                "src/kernel/*"
            ],
            "@driver/*": [
                "src/driver/*"
            ],
            "@infra/*": [
                "src/infra/*"
            ],
            "@server/*": [
                "src/server/*"
            ],
            "@logic/*": [
                "src/logic/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node"
        ],
        "skipLibCheck": true,
        /* Sugestões de código */
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        /* Performance e precisão */
        "disableSizeLimit": false,
        "assumeChangesOnlyAffectDirectDependencies": true
    },

    /* Escopo do projeto - arquivos monitorados pelo IntelliSense */
    "include": [
        "src/**/*.js",
        "scripts/**/*.js",
        "tests/**/*.js",
        "*.js",
        "*.mjs",
        "*.cjs",
        "ecosystem.config.js",
        ".puppeteerrc.cjs",
        "eslint.config.mjs"
    ],

    /* Excluir artefatos, dependências e dados */
    "exclude": [
        "node_modules",
        "dist",
        "build",
        "coverage",
        "logs",
        "fila",
        "respostas",
        "profile",
        "public",
        "backups",
        "monitoring",
        "tmp",
        "analysis",
        "local-login",
        "DOCUMENTAÇÃO",
        ".git",
        ".vscode",
        ".devcontainer",
        ".tmp.drivedownload",
        ".tmp.driveupload",
        "**/node_modules/**",
        "**/.tmp.*/**",
        "**/.*",
        "**/*.min.js",
        "**/*.map",
        "**/bundle.js",
        "**/*.bundle.js"
    ]
}
