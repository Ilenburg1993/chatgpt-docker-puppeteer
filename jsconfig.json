{
    "compilerOptions": {
        /* Plataforma e módulos - Node.js 20+ CommonJS */
        "target": "ES2022",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["ES2022"],

        /* Verificações TypeScript desabilitadas para JS puro */
        "checkJs": false,
        "allowJs": true,

        /* Desabilitar modo estrito (projeto JavaScript sem tipos) */
        "strict": false,
        "noImplicitAny": false,

        /* Interoperabilidade Node.js */
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,

        /* IntelliSense e navegação */
        "baseUrl": ".",
        "skipLibCheck": true
    },

    /* Escopo do projeto */
    "include": ["src/**/*", "scripts/**/*", "tests/**/*", "*.js"],

    /* Excluir artefatos e dependências */
    "exclude": [
        "node_modules",
        "dist",
        "coverage",
        "logs",
        "fila",
        "respostas",
        "profile",
        "public",
        "**/node_modules/**",
        "**/.tmp.*/**"
    ]
}
