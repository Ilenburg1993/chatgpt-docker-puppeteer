# NPM Configuration - Performance & Security
# https://docs.npmjs.com/cli/v10/configuring-npm/npmrc

# === ENGINE STRICTNESS ===
# Enforce Node.js version from package.json
engine-strict=true

# === PACKAGE LOCK ===
# Always use package-lock.json (never yarn.lock)
package-lock=true

# Save exact versions (no ^ or ~)
save-exact=true

# === SECURITY ===
# Audit level (info, low, moderate, high, critical)
audit-level=moderate

# Don't ignore install scripts (security: allow post-install)
ignore-scripts=false

# === PERFORMANCE ===
# Use offline cache when possible
prefer-offline=true

# Cache minimum time (24 hours)
cache-min=86400

# Fund messages disabled (cleaner output)
fund=false

# === LOGGING ===
# Log level (silent, error, warn, notice, http, info, verbose, silly)
loglevel=notice

# Progress bar (disable for CI/CD)
progress=true

# === REGISTRY ===
# Use official npm registry
registry=https://registry.npmjs.org/

# === OPTIONAL DEPENDENCIES ===
# Install optional dependencies
optional=true

# === WORKSPACE ===
# Workspace configuration
# workspaces=true  # Uncomment if using npm workspaces
