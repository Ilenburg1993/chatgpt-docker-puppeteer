# ===================================================================
# npm configuration — projeto chatgpt-docker-puppeteer
# Escopo: desenvolvimento local + DevContainer (Linux)
# ===================================================================

# Evita logs excessivos em CI e DevContainer
loglevel=warn

# Segurança e previsibilidade
audit=false
fund=false

# Performance (especialmente importante em WSL2 / volumes)
prefer-offline=true
fetch-retries=2
fetch-retry-factor=2
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Compatibilidade com projetos grandes
progress=false

engine-strict=true

# Garante comportamento consistente entre npm install / ci
package-lock=true

# Node-gyp / builds nativos (Linux container)
build-from-source=false

# Cache (respeita volume nomeado no DevContainer)
cache=/home/node/.npm

# Evita problemas de permissões em containers
unsafe-perm=true
