# NPM Configuration - Performance & Security
# https://docs.npmjs.com/cli/v10/configuring-npm/npmrc
# Version: 2.0 (Optimized - 2026-01-22)

# === ENGINE STRICTNESS ===
engine-strict=true

# === PACKAGE LOCK ===
package-lock=true
package-lock-only=false
save-exact=true

# === SECURITY ===
audit-level=moderate
ignore-scripts=false

# === PERFORMANCE ===
# Cache
prefer-offline=true
cache=/tmp/npm-cache

# Network
maxsockets=15
fetch-retries=3
fetch-retry-mintimeout=10000
fetch-retry-maxtimeout=60000

# Installation
prefer-dedupe=true
legacy-peer-deps=false

# === OUTPUT ===
fund=false
loglevel=notice
progress=true
color=true

# === REGISTRY ===
registry=https://registry.npmjs.org/

# === WORKSPACE ===
# workspaces=true  # Uncomment if using npm workspaces
